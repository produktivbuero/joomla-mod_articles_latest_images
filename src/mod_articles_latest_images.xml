<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>MOD_ARTICLES_LATEST_IMAGES</name>
  <creationDate>10/2018</creationDate>
  <author>Sebastian Br√ºmmer</author>
  <authorEmail>sebastian@produktivbuero.de</authorEmail>
  <authorUrl>https://www.produktivbuero.de</authorUrl>
	<copyright>Copyright (C) 2005 - 2017 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
  <version>0.9.0</version>
	<description>MOD_ARTICLES_LATEST_IMAGES_XML_DESCRIPTION</description>

  <!-- Plugin files -->
	<files>
		<filename module="mod_articles_latest_images">mod_articles_latest_images.php</filename>
		<folder>language</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
	</files>

  <!-- Media files -->
	<media folder="media" destination="mod_articles_latest_images">
	</media>

  <!-- Config parameter -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="catid"
					type="category"
					label="JCATEGORY"
					description="MOD_ARTICLES_LATEST_IMAGES_FIELD_CATEGORY_DESC"
					extension="com_content"
					multiple="true"
					size="10"
					default=""
					>
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>

				<field
					name="count"
					type="text"
					label="MOD_ARTICLES_LATEST_IMAGES_FIELD_COUNT_LABEL"
					description="MOD_ARTICLES_LATEST_IMAGES_FIELD_COUNT_DESC"
					default="5"
				/>

				<field
					name="show_featured"
					type="list"
					label="MOD_ARTICLES_LATEST_IMAGES_FIELD_FEATURED_LABEL"
					description="MOD_ARTICLES_LATEST_IMAGES_FIELD_FEATURED_DESC"
					default=""
					>
					<option value="">JSHOW</option>
					<option value="0">JHIDE</option>
					<option value="1">MOD_ARTICLES_LATEST_IMAGES_VALUE_ONLY_SHOW_FEATURED</option>
				</field>

				<field
					name="ordering"
					type="list"
					label="MOD_ARTICLES_LATEST_IMAGES_FIELD_ORDERING_LABEL"
					description="MOD_ARTICLES_LATEST_IMAGES_FIELD_ORDERING_DESC"
					default="published"
					>
					<option value="c_dsc">MOD_ARTICLES_LATEST_IMAGES_VALUE_RECENT_ADDED</option>
					<option value="m_dsc">MOD_ARTICLES_LATEST_IMAGES_VALUE_RECENT_MODIFIED</option>
					<option value="p_dsc">MOD_ARTICLES_LATEST_IMAGES_VALUE_RECENT_PUBLISHED</option>
					<option value="mc_dsc">MOD_ARTICLES_LATEST_IMAGES_VALUE_RECENT_TOUCHED</option>
					<option	value="random">MOD_ARTICLES_LATEST_IMAGES_VALUE_RECENT_RAND</option>
				</field>

				<field
					name="user_id"
					type="list"
					label="MOD_ARTICLES_LATEST_IMAGES_FIELD_USER_LABEL"
					description="MOD_ARTICLES_LATEST_IMAGES_FIELD_USER_DESC"
					default="0"
					>
					<option value="0">MOD_ARTICLES_LATEST_IMAGES_VALUE_ANYONE</option>
					<option value="by_me">MOD_ARTICLES_LATEST_IMAGES_VALUE_ADDED_BY_ME</option>
					<option value="not_me">MOD_ARTICLES_LATEST_IMAGES_VALUE_NOTADDED_BY_ME</option>
				</field>

				<field
					name="show_title"
					type="radio"
          default="1" 
					label="MOD_ARTICLES_LATEST_IMAGES_FIELD_TITLE_LABEL"
					description="MOD_ARTICLES_LATEST_IMAGES_FIELD_TITLE_DESC" 
          class="btn-group btn-group-yesno">
					>
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
				</field>

				<field
					name="show_introtext"
					type="radio"
          default="0" 
					label="MOD_ARTICLES_LATEST_IMAGES_FIELD_INTROTEXT_LABEL"
					description="MOD_ARTICLES_LATEST_IMAGES_FIELD_INTROTEXT_DESC" 
          class="btn-group btn-group-yesno">
					>
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
				</field>

				<field
					name="show_readmore"
					type="radio"
          default="0" 
					label="MOD_ARTICLES_LATEST_IMAGES_FIELD_READMORE_LABEL"
					description="MOD_ARTICLES_LATEST_IMAGES_FIELD_READMORE_DESC" 
          class="btn-group btn-group-yesno">
					>
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
				</field>

				<field
					name="show_author"
					type="radio"
          default="0" 
					label="MOD_ARTICLES_LATEST_IMAGES_FIELD_AUTHOR_LABEL"
					description="MOD_ARTICLES_LATEST_IMAGES_FIELD_AUTHOR_DESC" 
          class="btn-group btn-group-yesno">
					>
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
				</field>

				<field
					name="show_category"
					type="radio"
          default="0" 
					label="MOD_ARTICLES_LATEST_IMAGES_FIELD_CATEGORY_LABEL"
					description="MOD_ARTICLES_LATEST_IMAGES_FIELD_CATEGORY_DESC" 
          class="btn-group btn-group-yesno">
					>
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
				</field>

				<field
					name="show_date"
					type="radio"
          default="0" 
					label="MOD_ARTICLES_LATEST_IMAGES_FIELD_DATE_LABEL"
					description="MOD_ARTICLES_LATEST_IMAGES_FIELD_DATE_DESC" 
          class="btn-group btn-group-yesno">
					>
          <option value="1">JSHOW</option>
          <option value="0">JHIDE</option>
				</field>
			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
					default="1"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					default="900"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
					>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>

  <!-- Update servers -->
  <updateservers>
    <server type="extension" priority="1" name="MOD_ARTICLES_CATEGORY_CALENDAR">https://raw.githubusercontent.com/produktivbuero/joomla-mod_articles_latest_images/master/updates.xml</server>
  </updateservers>
</extension>
